{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Admin username for all VMs"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Admin password for all VMs"
            }
        },
        "numberOfVMSs": {
            "type": "int",
            "metadata": {
                "description": "Number of VMSSes to deploy"
            }
        },
        "numberofdataDisks": {
            "type": "int",
            "metadata": {
                "description": "Number of DataDisks for the VM"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Default location"
            }
        },
        "OS": {
            "type": "string",
            "defaultValue": "2019-Datacenter",
            "allowedValues": [
                "2008-R2-SP1",
                "2012-Datacenter",
                "2012-R2-Datacenter",
                "2016-Nano-Server",
                "2016-Datacenter-with-Containers",
                "2016-Datacenter",
                "2019-Datacenter",
                "2019-Datacenter-Core",
                "2019-Datacenter-Core-smalldisk",
                "2019-Datacenter-Core-with-Containers",
                "2019-Datacenter-Core-with-Containers-smalldisk",
                "2019-Datacenter-smalldisk",
                "2019-Datacenter-with-Containers",
                "2019-Datacenter-with-Containers-smalldisk"
            ],
            "metadata": {
                "description": "The Windows version for the VMs"
            }
        },
        "vmSizes": {
            "type": "string",
            "allowedValues": [
                "Basic_A0",
                "Standard_D1_v2",
                "Standard_DS1_V2",
                "Standard_F4s_V2",
                "Standard_D2_v3"
            ],
            "defaultValue": "Standard_D1_v2",
            "metadata": {
                "description": "The Type of replication to use for the VM Seize"
            }
        },
        "managedDisk": {
            "type": "string",
            "allowedValues": [
                "Standard SSD",
                "Preminum SSD",
                "Standard HDD"
            ],
            "defaultValue": "Standard SSD",
            "metadata": {
                "description": "OS Disk Type"
            }
        },
        "dataDiskSizeGB": {
            "type": "int",
            "metadata": {
                "description": "Data Disk size in GB"
            }
        }
    },
    "functions": [],
    "variables": {
        "virtualNetworkName": "VnetName",
        "subnetName": "Subnet-1",
        "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnet',variables('virtualNetworkName'),variables('subnetName'))]",
        "Windows": {
            "Publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2016-DataCenter",
            "version": "latest"
        },
        "imageReference": "[variables(parameters('OS'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat('nic',copyIndex())]",
            "apiVersion": "2020-11-01",
            "location": "[parameters('location')]",
            "copy": {
                "name": "nicLoop",
                "count": "[parameters('numberOfVMSs')]"
            },
            "dependsOn": [
                "[variables('virtualNetworkName')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties":{
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat('VM',copyIndex())]",
            "apiVersion": "2021-03-01",
            "location": "[parameters('location')]",
            "copy": {
                "name": "virtualManchineLoop",
                "count": "[parameters('numberOfVMSs')]"
            },
            "dependsOn": [
                "nicLoop"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSizes')]"
                } ,
                "osProfile": {
                    "computerName": "[concat('vm',copyIndex())]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "osDisk": {
                    "createOption": "FromImage",
                    "manageDisk": {
                        "StorageAccountType": "[parameters('managedDisk')]"
                    }
                },
                "dataDisks": {
                    "copy": {
                        "name": "dataDiskLoop",
                        "count": "[parameters('numberofdataDisks')]"{
                            "diskSizeGB": "[parameters('dataDiskSizeGB')]",
                            "lun":{
                                "dependsOn":[
                                    "dataDiskLoop"
                                ],
                                "createOption":"Empty"
                            }
                        }
                    }
                }
            }
        }
    ],
    "outputs": {}
}